{
  "name": "donchev/framework",
  "description": "A Tiny PHP Framework",
  "type": "package",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Donchev\\Framework\\": "src/"
    }
  },
  "authors": [
    {
      "name": "donchev",
      "email": "info@videlin.eu"
    }
  ],
  "require": {
    "php": ">=8.2",
    "ext-json": "*",
    "nikic/fast-route": "^1.3",
    "php-di/php-di": "^7.0",
    "symfony/yaml": "^7.2",
    "donchev/simple-logger": "^2.1",
    "doctrine/annotations": "^2.0",
    "twig/twig": "^3.20",
    "symfony/cache": "^7.2",
    "nette/mail": "^4.0",
    "sergeytsalkov/meekrodb": "^3.1",
    "symfony/console": "^7.2",
    "laminas/laminas-diactoros": "^3.5",
    "psr/http-message": "^2.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "filp/whoops": "^2.18",
    "phpunit/phpunit": "^12.1",
    "friendsofphp/php-cs-fixer": "^3.75"
  },
  "scripts": {
    "cs-check": "php-cs-fixer fix --dry-run --diff",
    "cs-fix": "php-cs-fixer fix"
  }
}
